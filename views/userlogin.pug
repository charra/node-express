extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        form(method='POST' action='/user/register')
          div.form-group
            label(for='name') Name
            input.form-control(type='text' id='name' placeholder='name' name='name')
          div.form-group
            label(for='surname') Surname
            input.form-control(type='text' id='surname' placeholder='surname' name='surname')
          div.form-group
            label(for='email') Email
            input.form-control(type='email' id='email' placeholder='email' name='email')
          button.btn.btn-primary(type='submit') Log in 